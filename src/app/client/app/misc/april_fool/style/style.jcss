@charset "UTF-8";
html,body,h1,h2,h3,p,span,a,div,ol,ul,li,dl,dt,dd,table,
tbody,tfoot,thead,tr,th,td,input,textarea,form,section,button{
    margin:0;
    padding:0;
    font:14px/2em 'Microsoft Yahei',Arial,Verdana,Helvetica,sans-serif;
}
body{
    background-color: #ffe49d;
    -webkit-text-size-adjust:none;
    min-width:320px;
    color: #333;
}
ul,li{
    list-style:none;
}
a{
    text-decoration:none;
}
em,i{
    font-style:normal;
}
html,body{
    height: 100%;
}
input,textarea,button,input:focus,textarea:focus,button:focus{
    outline:none;
}
input,textarea,button{
    -webkit-appearance:none;
    appearance:none;
}
header img{
    width: 100%;
    display: block;
}
main h2{
    text-align: center;
    color: #ff4c5d;
    font-weight: bold;
    height: 50px;
    line-height: 50px;
    position: relative;
    font-size: 15px;
    width: 320px;
    margin: 0 auto;
}
main h2:before,
main h2:after,
.group-list .head-icon,
.group-list li:nth-child(2):before,
.group-list li:nth-child(2):after,
.group-list li:nth-child(3):before,
.group-list li:nth-child(3):after,
.group-list li:nth-child(4):before,
.group-list li:nth-child(4):after,
.group-list li:nth-child(5):before,
.group-list li:nth-child(6):after,
.group-list li:nth-child(7):before,
.group-list li:nth-child(9):before,
.group-list li:nth-child(10):before,
.group-list li:nth-child(10):after,
.content-box .beat-icon{
    background: url(http://stacdn201.ganjistatic1.com/att/project/app/april_fool/img/icon.png) no-repeat;
    background-size: 300px auto;
}
main h2:before,main h2:after,
.group-list li:nth-child(2):before,
.group-list li:nth-child(2):after,
.group-list li:nth-child(3):before,
.group-list li:nth-child(3):after,
.group-list li:nth-child(4):before,
.group-list li:nth-child(4):after,
.group-list li:nth-child(5):before,
.group-list li:nth-child(6):after,
.group-list li:nth-child(7):before,
.group-list li:nth-child(9):before,
.group-list li:nth-child(10):before,
.group-list li:nth-child(10):after{
    position: absolute;
    content: "";
}
